use kafka_db;

CREATE TABLE advertiser (
    advertiserId INT PRIMARY KEY,
    advertiser_name VARCHAR(255),
    type_of_advertiser VARCHAR(50),
    amount_charge DECIMAL(10, 2),
    output_location VARCHAR(255),
    output_data_format VARCHAR(50)
);

CREATE TABLE adslot (
    adslotId INT PRIMARY KEY,
    adslot_name VARCHAR(255),
    type_of_adslot VARCHAR(50),
    place_at VARCHAR(255)
);

select *From advertiser;
select *from adslot;
